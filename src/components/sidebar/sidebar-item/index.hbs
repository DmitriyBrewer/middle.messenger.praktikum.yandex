<li class="chat">
    <div class="chat__info">
        {{!-- {{> Avatar}} --}}
        <img src="/assets/avatar.png" alt="chatAvatar" class="avatar" />
        <div class="chat__main">
            {{!-- {{> ChatTitle }} --}}
            <h1 class="chatTitle">{{title}}</h1>
            <p class="chat__message">{{message}}</p>
        </div>
    </div>

    <div class="chat__minor">
        <p class="chat__date">{{time}}</p>
        <div class="chat__counter">{{counter}}</div>
    </div>
</li>
